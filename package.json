{
  "name": "@mkvlrn/newts",
  "version": "0.0.0",
  "license": "MIT",
  "description": "A very opinionated cli tool for setting up multiple typescript projects",
  "author": "Mike Valeriano <mkvlrn@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git@github.com:mkvlrn/newts.git"
  },
  "keywords": ["typescript", "cli", "templates"],
  "type": "module",
  "bin": {
    "mkvlrn-newts": "main.js"
  },
  "engines": {
    "node": ">=22.6"
  },
  "imports": {
    "#*": "./src/*"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "files": ["build/*"],
  "scripts": {
    "prebuild": "rm -rf build",
    "build": "tsup",
    "postbuild": "cp package.json build/package.json && cp README.md build/README.md && cp LICENSE build/LICENSE && cd build && npm pkg delete imports scripts dependencies devDependencies && cd -",
    "dev": "node --experimental-strip-types --watch src/main.ts",
    "start": "node build/main.js",
    "test:ci": "yarn test --bail=1 --reporter=default && yarn test:e2e --bail=1 --reporter=default",
    "test": "vitest",
    "test:e2e": "vitest --config e2e/vitest.config.ts",
    "tidy:ci": "biome check --no-errors-on-unmatched",
    "tidy": "yarn tidy:ci --fix",
    "typecheck": "tsc --noEmit",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@commitlint/cli": "^19.7.1",
    "@commitlint/config-conventional": "^19.7.1",
    "@types/adm-zip": "^0.5.7",
    "@types/node": "^22.13.4",
    "@vitest/coverage-v8": "^3.0.5",
    "husky": "^9.1.7",
    "tsup": "^8.3.6",
    "typescript": "^5.7.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.0.5"
  },
  "dependencies": {
    "@inquirer/core": "^10.1.6",
    "@inquirer/prompts": "^7.3.1",
    "adm-zip": "^0.5.16",
    "colorette": "^2.0.20",
    "ora": "^8.2.0"
  }
}
