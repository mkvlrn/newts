{
  "name": "@mkvlrn/newts",
  "version": "0.0.0",
  "license": "MIT",
  "description": "A very opinionated cli tool for setting up multiple typescript projects",
  "author": "Mike Valeriano <mkvlrn@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git@github.com:mkvlrn/newts.git"
  },
  "keywords": ["typescript", "cli", "templates"],
  "type": "module",
  "bin": {
    "mkvlrn-newts": "build/main.js"
  },
  "engines": {
    "node": ">=22"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "files": ["build", "package.json", "README.md", "LICENSE"],
  "scripts": {
    "prebuild": "rm -rf build",
    "build": "tsc -p tsconfig.build.json",
    "postbuild": "tsc-alias -f -p tsconfig.build.json",
    "dev": "node --import=tsx --watch src/main.ts",
    "start": "node build/main.js",
    "test:ci": "yarn test --run --bail=1 --reporter=default && yarn test:e2e --run --bail=1 --reporter=default",
    "test": "vitest",
    "test:e2e": "vitest --config e2e/vitest.config.ts",
    "tidy:ci": "biome check --no-errors-on-unmatched",
    "tidy": "yarn tidy:ci --fix",
    "typecheck": "tsc --noEmit",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@types/adm-zip": "^0.5.7",
    "@types/node": "^22.10.7",
    "husky": "^9.1.7",
    "tsc-alias": "^1.8.10",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "@inquirer/core": "^10.1.4",
    "@inquirer/prompts": "^7.2.3",
    "@vitest/coverage-v8": "^3.0.2",
    "adm-zip": "^0.5.16",
    "colorette": "^2.0.20",
    "ora": "^8.1.1",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.0.2"
  }
}
