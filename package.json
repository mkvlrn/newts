{
  "name": "@mkvlrn/newts",
  "version": "0.0.0",
  "license": "MIT",
  "description": "A very opinionated cli tool for setting up multiple typescript projects",
  "author": "Mike Valeriano <mkvlrn@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git@github.com:mkvlrn/newts.git"
  },
  "type": "module",
  "bin": {
    "mkvlrn-newts": "build/main.js"
  },
  "engines": {
    "node": ">=22"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "files": ["dist", "package.json", "readme.md"],
  "scripts": {
    "swc": "node --import @swc-node/register/esm-register",
    "prebuild": "rm -rf build",
    "build": "npx swc src -d ./build --strip-leading-paths",
    "dev": "npm run swc -- --watch src/main.ts",
    "start": "node build/main.js",
    "test": "npm run swc -- scripts/test.ts",
    "test:cov": "npm run swc -- scripts/test.ts --coverage",
    "tidy": "npm run swc -- scripts/tidy.ts",
    "typecheck": "npx tsc --noEmit",
    "prepare": "npx husky"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@swc-node/register": "^1.10.9",
    "@swc/cli": "^0.5.2",
    "@swc/core": "^1.10.4",
    "@types/adm-zip": "^0.5.7",
    "@types/node": "^22.10.3",
    "@vitest/coverage-v8": "^2.1.8",
    "husky": "^9.1.7",
    "typescript": "^5.7.2",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^2.1.8"
  },
  "dependencies": {
    "@inquirer/core": "^10.1.2",
    "@inquirer/prompts": "^7.2.1",
    "adm-zip": "^0.5.16",
    "colorette": "^2.0.20",
    "ora": "^8.1.1"
  },
  "commitlint": {
    "extends": ["@commitlint/config-conventional"]
  }
}
