{
  "$schema": "https://raw.githubusercontent.com/egoist/tsup/refs/heads/main/schema.json",
  "entry": ["src/main.ts"],
  "outDir": "build",
  "format": ["esm"],
  "target": "esnext",
  "platform": "node",
  "bundle": true,
  "sourcemap": true,
  "dts": false,
  "splitting": false,
  "cjsInterop": false,
  "minify": true,
  "external": [],
  "noExternal": ["@inquirer/core", "@inquirer/prompts", "adm-zip", "colorette", "ora"],
  "banner": {
    "js": "import { createRequire } from 'module'; const require = createRequire(import.meta.url);"
  }
}
